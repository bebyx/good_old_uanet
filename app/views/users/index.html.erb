<table>
  <tr>
    <th>Псевдо</th>
    <th>Емейл</th>
    <th colspan='3'>Опції</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= link_to 'Профіль', user_path(user) %></td>
      <td><%= link_to 'Редагувати', edit_user_path(user) %></td>
      <td><%= link_to 'Видалити', user_path(user),
                  method: :delete,
                  data: { confirm: 'Точно видалити?' } %></td>
    </tr>
  <% end %>

</table>

<p><%= will_paginate %></p>

<p><%= link_to 'До списку записів', records_path %></p>

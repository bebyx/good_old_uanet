<h1>Сторінка користувача <u><%= @user.username %></u></h1>

<p><%= link_to 'Додати новий запис', new_record_path %></p>

<p><%= link_to 'До списку записів', records_path %></p>

<p><%= link_to 'Logout', logout_path, method: :delete %></p>

<p>Додане користувачем:</p>

<table>
  <tr>
    <th>Назва</th>
    <th>Рік</th>
    <th>Веб-архів</th>
    <th>Посилання (якщо живий)</th>
    <th>Коментарі</th>
    <th></th>
  </tr>

  <% @user_records.each do |record| %>
    <tr>
      <td><%= record.name %></td>
      <td><%= record.first_year %></td>
      <td><%= record.webarchive %></td>
      <td><%= record.link %></td>
      <td><%= record.comment %></td>
      <td><%= link_to 'Show', record_path(record) %></td>
      <td><%= link_to 'Edit', edit_record_path(record) %></td>
      <td><%= link_to 'Destroy', record_path(record),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
